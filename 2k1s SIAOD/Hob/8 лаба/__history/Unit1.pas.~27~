{$R *.dfm}
const
G = 9;
P = 10;

type
K = array [0..G] of integer;

var A :  K;
key, x, b, c, z : integer; // кеу - номер в таблице
i : integer;

procedure TForm1.FormCreate(Sender: TObject); //создание формы
 var i: integer;
begin
  label1.caption:='¬ведите артикул'+chr(13)+'(в цифрах)';
  c := randomrange(0,9);
  b := randomrange(0,9);
  z:=c*b;
  for i := 0 to G do
  begin
    A[i]:= 0; //обнул€ем массив значений
    Form1.StringGrid1.Cells[0, i] := IntToStr(i)
  end;
end;

Function Hash (z:integer): integer;
begin
 Hash := z mod P;
 end;

Procedure  SAP (key:integer);
begin
key := Hash(z);    //ключу присваиваетс€ значение
Form1.Edit2.text := IntToStr(c);
Form1.Edit3.text := IntToStr(b);
if A[key] = 0 then   //если значение при K равно нулю, то
 begin
   A[key] := x; //вывод значени€
   Form1.StringGrid1.Cells[1, key] := IntToStr(x);
 end
  else
  Begin
 { for i := 0 to 9 do
  if key =9 then
  key := 0
  else
  key := key+1; }
  if A[key] > 0 then
  key := key + 1;
     begin
       A[key] := x;
       Form1.StringGrid1.Cells[1, key] := IntToStr(x);
    end;
  End;
end;


procedure TForm1.Button1Click(Sender: TObject);
 begin
x := StrToInt(Edit1.Text);
SAP(x);
end;

end.
