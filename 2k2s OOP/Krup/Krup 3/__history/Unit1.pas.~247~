unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Grids, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TForm1 = class(TForm)
    StringGrid1: TStringGrid;
    StringGrid2: TStringGrid;
    Edit1: TEdit;
    Edit2: TEdit;
    Button1: TButton;
    Button2: TButton;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Edit3: TEdit;
    Label4: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    Button3: TButton;
    RadioGroup1: TRadioGroup;
    procedure Button1Click(Sender: TObject);
    procedure Edit3KeyPress(Sender: TObject; var Key: Char);
    procedure Button2Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure CheckBox1Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure RadioGroup1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
  i, j:integer;
begin

  if edit1.text = '' then
    begin
      ShowMessage('Введите количество столбцов.');
      edit1.SetFocus();
      exit;
    end;

  if edit2.text = '' then
    begin
      ShowMessage('Введите количество строк.');
      edit2.SetFocus();
      exit;
    end;

  if (strtoint(edit2.text) <= 0) or (strtoint(edit1.text) <= 0) then
  begin
    showmessage('Значение должно быть > 0');
  end;
  stringGrid1.ColCount := strtoint(edit1.text);
  stringGrid1.RowCount := strtoint(edit2.text);

  Randomize;
  for i := 0 to stringgrid1.ColCount - 1 do
    for j := 0 to stringgrid1.RowCount - 1 do
      stringgrid1.Cells[i,j] := inttostr(100-Random(200));

  button2.Enabled := True;

end;

procedure TForm1.Button2Click(Sender: TObject);
var
  i,j, colChecker, thisCol, rCol:integer;
begin

  stringGrid2.ColCount := stringGrid1.ColCount;
  stringGrid2.RowCount := stringGrid1.RowCount;

  if radiogroup1.ItemIndex = 0 then
  begin
    for i := 0 to stringgrid1.ColCount - 1 do
      for j := 0 to stringgrid1.RowCount - 1 do
        if StrToInt(stringgrid1.Cells[i, j]) < 0 then
          stringgrid2.Cells[i,j] := '0'
        else
          stringgrid2.Cells[i,j] := stringgrid1.Cells[i,j];
  end

  else begin
    colChecker := 0;
    while colChecker < stringgrid1.ColCount do
    begin
      for i := 0 to stringgrid1.RowCount - 1 do
      begin
        if colChecker = stringgrid1.ColCount - 1 then
          stringgrid2.Cells[colChecker, i] := stringgrid1.Cells[colChecker, i]

        else begin
          thisCol := strtoint(stringgrid1.Cells[colChecker, i]);
          rCol := strtoint(stringgrid1.Cells[colChecker + 1, i]);
          stringgrid2.Cells[colChecker, i] := inttostr(thisCol + rCol);
        end;
      end;
      inc(colChecker);
    end;

  end;

  edit3.Enabled := true;
  button3.Enabled := true;
      
end;

procedure TForm1.Button3Click(Sender: TObject);
var
  numCol, sum, i, j, forSum: integer;
begin

  try
    numCol := strtoint(edit3.Text) - 1;
  except
    Showmessage('Введите значение');
    edit3.SetFocus();
    exit;
  end;

  sum := 0;

  if (((numCol > StringGrid2.ColCount - 1) or (numCol < 0)) and (radiogroup1.ItemIndex = 0)) then
    begin
      showmessage('Неверный номер столбца');
      exit;
    end
  else if radiogroup1.ItemIndex = 1 then
    numCol := numCol + 1;


  if radiogroup1.ItemIndex = 0 then
    begin
    try
      for i := 0 to stringgrid2.RowCount - 1 do
        sum := sum + strtoint(stringgrid2.Cells[numCol, i]);
    except
      showmessage('Ошибка в таблице.');
      label4.Caption := 'Сумма: ошибка.';
      exit;
    end;
    label4.Caption := 'Сумма: ' + inttostr(sum);
  end

  else begin
    try
      for i := 0 to stringgrid2.ColCount - 1 do
        for j := 0 to stringgrid2.RowCount - 1 do
          if (strtoint(stringgrid2.Cells[i, j]) > numCol) then
            sum := sum + strtoint(stringgrid2.Cells[i, j]);
    except
      showmessage('Ошибка в таблице.');
      label4.Caption := 'Сумма: ошибка.';
      exit;
    end;
    label4.Caption := 'Сумма: ' + inttostr(sum);
  end;

end;

procedure TForm1.CheckBox1Click(Sender: TObject);
var
  i, j: integer;
begin
  for i := 0 to stringgrid2.ColCount - 1 do
    for j := 0 to stringgrid2.RowCount - 1 do
      stringgrid2.Cells[i, j] := '';
end;

procedure TForm1.Edit3KeyPress(Sender: TObject; var Key: Char);
begin
case Key of
  #8, '0'..'9':
 else
  Key := Chr(0);
 end;
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
  RadioGroup1.ItemIndex := 1;
end;

procedure TForm1.RadioGroup1Click(Sender: TObject);
var
  i, j: integer;
begin
  for i := 0 to stringgrid2.ColCount - 1 do
    for j := 0 to stringgrid2.RowCount - 1 do
      stringgrid2.Cells[i, j] := '';

  if radiogroup1.ItemIndex = 1 then
    label3.Caption := 'Сумма чисел,' + #13 + 'больших:'
  else
    label3.Caption := '№ Столбца: '

end;

end.
